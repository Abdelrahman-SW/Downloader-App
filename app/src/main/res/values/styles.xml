<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MyCustomAttributes">
        <attr name="IconsColor" format="color"/>
        <attr name="main" format="color"/>
        <attr name="iconColorOnFab" format="color"/>
        <attr name="toolbarColor" format="color"/>
        <attr name="colorOnToolbar" format="color"/>
        <attr name="popMenuBackgroundColor" format="color"/>
        <attr name="popMenuTextColor" format="color"/>
        <attr name="navBackgroundColor" format="color"/>
        <attr name="navTextColor" format="color"/>
        <attr name="upButtonColor" format="color"/>
        <attr name="settingsFirstTextColor" format="color"/>
        <attr name="settingsSecondTextColor" format="color"/>
        <attr name="bottomSheetTextHeaderColor" format="color"/>
        <attr name="bottomSheetMainTextColor" format="color"/>
        <attr name="bottomSheetIconsColor" format="color"/>
        <attr name="bottomSheetBackgroundColor" format="color"/>
        <attr name="cardViewBackgroundColor" format="color"/>
        <attr name="customIconColor" format="color"/>
    </declare-styleable>

    <style name="bottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">?attr/upButtonColor</item>
    </style>

    <style name="bottomSheetStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:editTextColor">@color/black</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/teal_700</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/teal_700</item>
    </style>

</resources>